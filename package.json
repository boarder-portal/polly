{
  "name": "polly",
  "version": "1.0.0",
  "scripts": {
    "start": "npm-run-all -p dev:client:watch dev:server:start",
    "dev:client:watch": "parcel watch app/client/index.html --public-url /public",
    "dev:server:start": "ts-node-dev --transpile-only --ignore-watch /dist/ -r tsconfig-paths/register ./app/server/index.ts",
    "prod": "npm-run-all -s prod:client:build prod:server:start",
    "prod:client:build": "parcel build app/client/index.html --public-url /public",
    "prod:server:start": "ts-node --transpile-only -r tsconfig-paths/register ./app/server/index.ts",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit"
  },
  "alias": {
    "server": "./app/server",
    "client": "./app/client",
    "common": "./app/common"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "argon2": "^0.30.1",
    "classnames": "^2.3.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "mongoose": "^6.7.1",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@parcel/transformer-sass": "^2.7.0",
    "@types/koa": "^2.13.5",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.9",
    "@types/koa-compose": "^3.2.5",
    "@types/koa-mount": "^4.0.2",
    "@types/koa-static": "^4.0.2",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.7.0",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "typescript": "^4.8.4"
  }
}
